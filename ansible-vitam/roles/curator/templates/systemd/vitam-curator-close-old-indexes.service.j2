[Unit]
Description=Close old elasticsearch-log indexes
Wants=network.target
After=network.target

[Service]
Type=oneshot
ExecStart=/usr/bin/curator --config {{ curator_conf_dir }}/curator.yml {{ curator_conf_dir }}/close_index.yml
User=vitam
Group=vitam
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
